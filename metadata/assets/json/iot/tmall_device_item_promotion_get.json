{
	"name": "tmall.device.item.promotion.get",
	"apiChineseName": "智能硬件上商品优惠获取",
	"description": "商品优惠详情查询，可查询商品设置的详细优惠。包括限时折扣，满就送等官方优惠以及第三方优惠。",
	"requestParams": [
		{
			"name": "item_id",
			"type": "Number",
			"description": "商品id",
			"required": true
		}
	],
	"responseParams": [
		{
			"name": "promotions",
			"type": "PromotionDisplayTop",
			"description": "优惠详细信息",
			"subParams": [
				{
					"name": "promotion_in_item_list",
					"type": "PromotionInItem[]",
					"description": "单品级优惠信息",
					"required": true,
					"subParams": [
						{
							"name": "promotion_id",
							"type": "String",
							"description": "idValue的值",
							"required": true
						},
						{
							"name": "name",
							"type": "String",
							"description": "优惠展示名称",
							"required": true
						},
						{
							"name": "item_promo_price",
							"type": "String",
							"description": "优惠折后价格",
							"required": true
						},
						{
							"name": "sku_price_list",
							"type": "String",
							"description": "sku价格列表",
							"required": true
						},
						{
							"name": "desc",
							"type": "String",
							"description": "优惠描述",
							"required": true
						},
						{
							"name": "start_time",
							"type": "Date",
							"description": "优惠开始时间",
							"required": true
						},
						{
							"name": "end_time",
							"type": "Date",
							"description": "优惠结束时间",
							"required": true
						},
						{
							"name": "other_need",
							"type": "String",
							"description": "需要支付附加物，显示为+xxx。如：+20淘金币",
							"required": true
						},
						{
							"name": "other_send",
							"type": "String",
							"description": "赠送东西。如：送10商城积分",
							"required": true
						},
						{
							"name": "sku_id_list",
							"type": "String[]",
							"description": "sku价格对应的id（保证二者顺序相同）",
							"required": true
						}
					]
				},
				{
					"name": "promotion_in_shop_list",
					"type": "PromotionInShop[]",
					"description": "店铺级优惠信息",
					"required": true,
					"subParams": [
						{
							"name": "name",
							"type": "String",
							"description": "优惠活动名称",
							"required": true
						},
						{
							"name": "promotion_id",
							"type": "String",
							"description": "idValue值",
							"required": true
						},
						{
							"name": "promotion_detail_desc",
							"type": "String",
							"description": "优惠详情描述。",
							"required": true
						}
					]
				}
			]
		}
	]
}