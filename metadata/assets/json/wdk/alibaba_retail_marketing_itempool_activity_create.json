{
	"id": 54030,
	"name": "alibaba.retail.marketing.itempool.activity.create",
	"apiChineseName": "创建商品池活动【同城零售】",
	"description": "同城零售商品池活动创建",
	"requestParams": [
		{
			"name": "param",
			"type": "ItemPoolActivityOperateRequest",
			"description": "创建商品池活动参数",
			"required": true,
			"subParams": [
				{
					"name": "periodic_config",
					"type": "PeriodicConfigDto",
					"description": "周期配置",
					"subParams": [
						{
							"name": "every_day_periods",
							"type": "String[]",
							"description": "每天的什么时间阶段搞活动,精确到秒单位 例如:03:00:00_05:00:00"
						},
						{
							"name": "periodic",
							"type": "Boolean",
							"description": "周期配置是否生效"
						},
						{
							"name": "weekdays",
							"type": "Number[]",
							"description": "星期几搞活动 [1:Mon;2:Tues;3:Wed;4:Thur;5:Fri;6:Sat;7:Sun]"
						}
					]
				},
				{
					"name": "activity_name",
					"type": "String",
					"description": "活动名称，最长15个字符",
					"required": true
				},
				{
					"name": "creator_id",
					"type": "String",
					"description": "操作人id",
					"required": true
				},
				{
					"name": "creator_name",
					"type": "String",
					"description": "操作人名称",
					"required": true
				},
				{
					"name": "description",
					"type": "String",
					"description": "活动描述，最长30个字符"
				},
				{
					"name": "stair_groups",
					"type": "StairGroupDto[]",
					"description": "阶梯分组",
					"required": true,
					"subParams": [
						{
							"name": "number",
							"type": "Number",
							"description": "分组序号",
							"required": true
						},
						{
							"name": "condition",
							"type": "Condition",
							"description": "优惠门槛",
							"required": true,
							"subParams": [
								{
									"name": "amount",
									"type": "Number",
									"description": "满元金额，单位分"
								},
								{
									"name": "count_at",
									"type": "Boolean",
									"description": "是否满件"
								},
								{
									"name": "count_begin",
									"type": "Boolean",
									"description": "是否指定件数"
								},
								{
									"name": "appoint",
									"type": "Boolean",
									"description": "是否第N件"
								},
								{
									"name": "count",
									"type": "Number",
									"description": "满件门槛"
								},
								{
									"name": "amount_at",
									"type": "Boolean",
									"description": "是否满元"
								}
							]
						},
						{
							"name": "action",
							"type": "Action",
							"description": "优惠效果",
							"required": true,
							"subParams": [
								{
									"name": "decrease_money",
									"type": "Number",
									"description": "减钱金额，单位分"
								},
								{
									"name": "discount_rate",
									"type": "Number",
									"description": "折扣，950，表示9.5折"
								},
								{
									"name": "discount",
									"type": "Boolean",
									"description": "是否打折"
								},
								{
									"name": "fix_price",
									"type": "Boolean",
									"description": "是否一口价"
								},
								{
									"name": "fix_price_money",
									"type": "Number",
									"description": "一口价金额，单位分"
								},
								{
									"name": "decrease",
									"type": "Boolean",
									"description": "是否减钱"
								},
								{
									"name": "fix_price_type",
									"type": "Number",
									"description": "一口价类型，0：普通一口价，1：第N件一口价，2：整体一口价"
								}
							]
						}
					]
				},
				{
					"name": "terminals",
					"type": "Number[]",
					"description": "支持的终端，1：APP,2:POS",
					"required": true
				},
				{
					"name": "store_ids",
					"type": "String[]",
					"description": "经营店",
					"required": true
				},
				{
					"name": "limit",
					"type": "LimitDto",
					"description": "限购",
					"subParams": [
						{
							"name": "order_limit_cnt",
							"type": "Number",
							"description": "每单限购"
						},
						{
							"name": "daily_total_limit_cnt",
							"type": "Number",
							"description": "每日总限购"
						},
						{
							"name": "total_limit_cnt",
							"type": "Number",
							"description": "总限购"
						},
						{
							"name": "user_total_limit_cnt",
							"type": "Number",
							"description": "每人总限购"
						},
						{
							"name": "user_daily_limit_cnt",
							"type": "Number",
							"description": "每人每日总限购"
						}
					]
				},
				{
					"name": "out_act_id",
					"type": "String",
					"description": "外部商家erp活动id"
				},
				{
					"name": "start_time",
					"type": "Number",
					"description": "活动开始时间戳",
					"required": true
				},
				{
					"name": "end_time",
					"type": "Number",
					"description": "活动结束时间戳",
					"required": true
				},
				{
					"name": "member_crowd_code",
					"type": "String[]",
					"description": "限制人群,OLD_USER:老用户，NEW_USER:新用户，LIGHT_NEW_USER：闪购新客"
				},
				{
					"name": "logic_groups",
					"type": "LogicGroupDto[]",
					"description": "逻辑分组",
					"required": true,
					"subParams": [
						{
							"name": "number",
							"type": "Number",
							"description": "分组序号，换购场景需要两个逻辑分组，一个序号为1的普通逻辑分组和一个序号为2的换购逻辑分组",
							"required": true
						},
						{
							"name": "type",
							"type": "Number",
							"description": "分组类型，1: 普通分组， 2: 换购分组",
							"required": true
						},
						{
							"name": "exchange",
							"type": "Boolean",
							"description": "换购分组标识"
						},
						{
							"name": "exchange_rule",
							"type": "ExchangeRuleDto",
							"description": "换购规则",
							"subParams": [
								{
									"name": "max_buy_num",
									"type": "Number",
									"description": "每组最大购买数量, 单次下单可换购的不同sku商品数。换购分组该字段为必填"
								},
								{
									"name": "order_num",
									"type": "Number",
									"description": "换购分组顺序"
								}
							]
						},
						{
							"name": "effective_group",
							"type": "Boolean",
							"description": "是否生效分组（多分组情况下，可能为false，例如商品池换购，普通逻辑分组为false，换购分组为true）",
							"required": true
						}
					]
				},
				{
					"name": "enable_multiple",
					"type": "Boolean",
					"description": "上不封顶标识，若设置{@link #enableMultiple}=true，则不支持多阶梯配置，且可以叠加优惠"
				}
			]
		}
	],
	"responseParams": [
		{
			"name": "result",
			"type": "OctopusOpenResult",
			"description": "操作结果",
			"subParams": [
				{
					"name": "data",
					"type": "Number",
					"description": "活动id",
					"required": true
				},
				{
					"name": "success",
					"type": "Boolean",
					"description": "是否成功",
					"required": true
				},
				{
					"name": "error_message",
					"type": "String",
					"description": "错误提示",
					"required": true
				},
				{
					"name": "error_code",
					"type": "String",
					"description": "错误码",
					"required": true
				}
			]
		}
	]
}