{
	"name": "alibaba.retail.marketing.buygift.activity.create",
	"apiChineseName": "创建买赠活动",
	"description": "同城供给买赠活动创建",
	"requestParams": [
		{
			"name": "param",
			"type": "BuyGiftActivityOperateRequest",
			"description": "创建活动参数",
			"required": true,
			"subParams": [
				{
					"name": "activity_name",
					"type": "String",
					"description": "活动名称，最长20个字符",
					"required": true
				},
				{
					"name": "creator_id",
					"type": "String",
					"description": "活动创建者ID（数字类型）",
					"required": true
				},
				{
					"name": "creator_name",
					"type": "String",
					"description": "活动创建者name",
					"required": true
				},
				{
					"name": "description",
					"type": "String",
					"description": "活动描述，最长15个字符",
					"required": true
				},
				{
					"name": "terminals",
					"type": "Number[]",
					"description": "活动终端：1-APP",
					"required": true
				},
				{
					"name": "store_ids",
					"type": "String[]",
					"description": "活动生效的经营店ID",
					"required": true
				},
				{
					"name": "out_act_id",
					"type": "String",
					"description": "外部活动ID（商家自定义）"
				},
				{
					"name": "start_time",
					"type": "Number",
					"description": "活动开始时间（毫秒时间戳）",
					"required": true
				},
				{
					"name": "end_time",
					"type": "Number",
					"description": "活动结束时间（毫秒时间戳）",
					"required": true
				},
				{
					"name": "member_crowd_code",
					"type": "String[]",
					"description": "人群编码，NEW_USER: 新用户, OLD_USER：老用户，LIGHT_NEW_USER：闪购新客"
				}
			]
		}
	],
	"responseParams": [
		{
			"name": "result",
			"type": "OctopusOpenResult",
			"description": "操作结果",
			"subParams": [
				{
					"name": "data",
					"type": "Number",
					"description": "活动ID",
					"required": true
				},
				{
					"name": "error_code",
					"type": "String",
					"description": "错误码",
					"required": true
				},
				{
					"name": "success",
					"type": "Boolean",
					"description": "操作是否成功",
					"required": true
				},
				{
					"name": "error_message",
					"type": "String",
					"description": "错误描述",
					"required": true
				}
			]
		}
	]
}